<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, "メールアドレス", class: "label-login" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, "パスワード", class: "label-login" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "Log in", class: "btn btn-block btn-primary btn-login" %>
    <% end %>
    アカウント作成は<%= link_to "こちら", new_user_path %>から
  </div>
</div>
