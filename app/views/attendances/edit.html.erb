<% provide(:title, "勤怠編集") %>

<div>
  <table class="table table-bordered table-condensed table-striped attendances-edit-table">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出社</th>
        <th>退社</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>残業指示</th>
        <th>指示者</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <%= form_with(model: @attendance, local:true) do |f| %>
          <tr>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td><%= f.time_field :started_at, class: "form-control" %></td>
            <td><%= f.time_field :finished_at, class: "form-control" %></td>
            <td></td>
            <td><%= f.text_field :note, class: "form-control" %></td>
            <td><%= f.text_field :work_overtime, class: "form-control" %></td>
            <td><%= f.text_field :overtime_instroctor, class: "form-control" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>  